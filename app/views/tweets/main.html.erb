<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>
<% @tweets.each do |tweet| %>
    <%= User.find_by(id: tweet.user_id).uid %><br>
    <%= tweet.message %><br>
    <% if tweet.file != nil %>
      <%= image_tag "/get_image/#{tweet.id}" %>
    <% end %>
    <%= ((Time.current - tweet.tdate)/60).floor %>分前
    <%= link_to '表示', "/tweets/#{tweet.id}" %>
    <% if session[:login_uid] %>
    <%= link_to 'いいね', "/likes/create", (tweet_id: tweet.id), method: :post %>
    <%= link_to 'いいね削除', "/likes/destroy", method: :delete %>
    <%= Like.where(tweet_id: tweet.id).count %>
    <% end %>
    <br>
<% end %>