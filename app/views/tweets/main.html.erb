<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>
<% @tweets.each do |tweet| %>
    <%= session[:login_uid] %>
    <%= tweet.message %><br>
    <% if tweet.file != nil %>
      <%= image_tag "/get_image/#{tweet.id}" %>
    <% end %>
    <%= ((Time.current - tweet.tdate)/60).floor %>分前
    <%= link_to '表示', "/tweets/#{tweet.id}" %>
    <% if session[:login_uid] %>
    <%= link_to 'いいね', "/likes/new" %>
    <% end %>
    <br>
<% end %>