<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>
<% @tweets.each do |tweet| %>
    <%= tweet.message %><br>
    <% if tweet.file != nil %>
      <%= image_tag "/get_image/#{tweet.id}" %>
    <% end %>
    <%= ((Time.current - tweet.tdate)/60).floor %>分前
    <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
    <%= link_to '表示', "/tweets/#{tweet.id}" %>
    <%= link_to '編集', "/tweets/#{tweet.id}/edit" %><br>
<% end %>